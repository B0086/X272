<?php

// POST isteği kontrolü
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    
    // Gelen veriyi al
    $post_veri = file_get_contents("php://input");
    
    // "1" ifadesini ara
    if (strpos($post_veri, '1') !== false) {
        echo "success";
    } else {
        echo "hata";
    }
} else {
    echo "Sadece POST istekleri kabul edilir.";
}

?>
