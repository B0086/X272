#include <iostream>
#include <cstdlib> // system() fonksiyonunu kullanmak için
#include <cstdio>  // popen() fonksiyonunu kullanmak için
#include <string>

using namespace std;

int main() {
    // Dosyayı indirme işlemi
    system("curl -O http://example.com/dosya.exe"); // Örnek olarak curl kullanıldı, indirme yönteminize göre değişebilir

    // İndirilen dosyayı çalıştırma işlemi
    string dosyaAdi = "dosya.exe"; // İndirilen dosyanın adı
    string komut = dosyaAdi + " argumanlar"; // Dosyayı çalıştırmak için gereken komut
    system(komut.c_str()); // Dosyayı çalıştırma
    return 0;
}
